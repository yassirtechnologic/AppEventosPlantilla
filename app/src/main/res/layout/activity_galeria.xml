<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <!-- 🔙 Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        style="@style/BotonMenuLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 📌 Logo esquina superior derecha -->
    <ImageView
        android:id="@+id/logoApp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:background="@drawable/borde_imagen"
        android:padding="6dp"
        android:contentDescription="@string/cd_logo"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🔒 Barrera para que el contenido siempre quede debajo del header -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/headerBarrier"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btnVolver,logoApp" />

    <!-- 📦 Panel de contenido -->
    <LinearLayout
        android:id="@+id/panelContenido"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:background="@color/menuPanelOverlay"
        app:layout_constraintTop_toBottomOf="@id/headerBarrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 📤 Botón subir (visible solo si eres admin) -->
        <Button
            android:id="@+id/btnSubirImagen"
            style="@style/BotonMenuLateral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_subir_imagen"
            android:layout_marginBottom="12dp" />

        <!-- 🔒 Mensaje para no-admin -->
        <TextView
            android:id="@+id/tvSoloAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/galeria_permiso_rationale"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- 📭 Estado vacío -->
        <TextView
            android:id="@+id/tvVacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/galeria_vacia"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- 🖼️ Lista de imágenes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerGaleria"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="ifContentScrolls"
            android:paddingBottom="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <!-- 📌 Logo fijo esquina superior izquierda -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/logo"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/cd_logo" />

    <!-- 📝 Texto título centrado -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:background="@color/menuPanelOverlay"
        android:padding="12dp" />

    <!-- 📌 Contenedor con botón para ir al menú -->
    <LinearLayout
        android:id="@+id/contenedorBoton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitulo"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginTop="40dp"
        android:background="@color/menuPanelOverlay"
        android:elevation="6dp">

        <Button
            android:id="@+id/btnAbrirMenu"
            style="@style/BotonMenuLateral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍽 Abrir menú principal"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />
    </LinearLayout>

</RelativeLayout>









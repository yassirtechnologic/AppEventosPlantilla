<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <!-- 📜 Contenido con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/contenedorMarisco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/menuPanelOverlay">

            <!-- 📌 Título -->
            <TextView
                android:id="@+id/tvTituloMarisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marisco_titulo"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- 🦐 Imagen principal -->
            <ImageView
                android:id="@+id/imgMarisco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/marisco"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="12dp"
                android:contentDescription="@string/cd_marisco" />

            <!-- 📝 Descripción -->
            <TextView
                android:id="@+id/tvDescMarisco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marisco_desc"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>






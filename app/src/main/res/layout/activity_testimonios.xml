<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <!-- ðŸ”™ BotÃ³n Volver -->
    <Button
        android:id="@+id/btnVolver"
        style="@style/BotonMenuLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- ðŸ“œ Contenido con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnVolver"
        android:layout_marginTop="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutListaTestimonios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/menuPanelOverlay">

            <!-- Estado vacÃ­o (visible solo si no hay testimonios) -->
            <TextView
                android:id="@+id/tvEmptyTestimonios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testimonios_vacio"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="visible"
                android:contentDescription="@string/testimonios_vacio" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>









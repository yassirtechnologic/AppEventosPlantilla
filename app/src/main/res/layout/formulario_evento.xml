<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <!-- 🔙 Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        style="@style/BotonMenuLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- 📜 Contenido con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnVolver"
        android:layout_marginTop="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:background="@color/menuPanelOverlay">

            <!-- 📛 Nombre del evento -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/form_nombre_hint"
                android:inputType="textCapWords"
                android:background="@drawable/field_bg"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- 📅 Fecha -->
            <EditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/form_fecha_hint"
                android:inputType="date"
                android:background="@drawable/field_bg"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- 📍 Ubicación -->
            <EditText
                android:id="@+id/etUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/form_ubicacion_hint"
                android:inputType="textCapWords"
                android:background="@drawable/field_bg"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- 📝 Descripción -->
            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/form_descripcion_hint"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:background="@drawable/field_bg"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="24dp" />

            <!-- 💾 Botón Guardar -->
            <Button
                android:id="@+id/btnGuardar"
                style="@style/BotonMenuLateral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_btn_guardar" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>






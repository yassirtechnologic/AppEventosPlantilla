<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/card_bg"
    android:layout_marginBottom="8dp">

    <!-- ðŸ–¼ Imagen del plato -->
    <ImageView
        android:id="@+id/imgPlato"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cd_plato" />

    <!-- ðŸ“Œ Contenido textual -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombrePlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plato_nombre_default"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvDescripcionPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plato_desc_default"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="2" />
    </LinearLayout>
</LinearLayout>


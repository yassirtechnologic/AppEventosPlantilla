<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <!-- ðŸ“Œ Logo fijo en la parte superior izquierda -->
    <ImageView
        android:id="@+id/logoFijo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/borde_imagen"
        android:padding="6dp"
        android:contentDescription="@string/cd_logo" />

    <!-- ðŸ”™ BotÃ³n volver (inicialmente oculto, se muestra desde BaseActivity) -->
    <Button
        android:id="@+id/btnVolver"
        style="@style/BotonMenuLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/logoFijo"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <!-- ðŸ“¦ Contenedor dinÃ¡mico donde se inflan los layouts de las Activities hijas -->
    <FrameLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logoFijo"
        android:layout_marginTop="8dp" />

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alias opcional al tema principal -->
    <style name="AppTheme" parent="Theme.AppEventos" />

    <!-- 🔘 Botón base (Material 3) -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/buttonPrimaryBackground</item>
        <item name="android:textColor">@color/buttonPrimaryText</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/overlay_light</item>
        <item name="elevation">2dp</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- 🔲 Variante outline -->
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- 🍔 Botón del menú lateral -->
    <style name="BotonMenuLateral" parent="Widget.App.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Si este background no es necesario, puedes quitarlo para conservar la tinta/ripple del botón M3 -->
        <item name="android:background">@drawable/btn_menu</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- 📝 Título de sección -->
    <style name="TituloSeccion" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- 📄 Texto secundario -->
    <style name="TextoSecundario" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- 🧾 Inputs Material 3 -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">@color/gray_light</item>
        <!-- 👈 CORREGIDO: sin android: -->
        <item name="hintTextColor">@color/gray_dark</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>






